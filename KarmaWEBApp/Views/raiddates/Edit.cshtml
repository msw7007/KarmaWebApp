@model KarmaWEBApp.Models.raiddates
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdRaidValue)
    <tr class="PartialView">
        <td width="0">
            <div class="col-md-0">
                @Html.HiddenFor(model => model.RaidDate)
                @Html.HiddenFor(model => model.IDPlayer)
                @Html.HiddenFor(model => model.IDIsActive)
                @Html.HiddenFor(model => model.char_names)
            </div>
        </td>
        <td class="col-md-7">
            @Html.ValueFor(model => model.char_names)
        </td>
        <td class="col-md-1">
            @Html.ValueFor(model => model.IDAttendance)
            @Html.ValueFor(model => model.RaidDate)
            @Html.ValueFor(model => model.IDPlayer)
        </td>
        <td class="col-md-1">
            @Html.DropDownList("IDAttendance", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDAttendance, "", new { @class = "text-danger" })
        </td>
        <td class="col-md-1">
            @Html.EditorFor(model => model.MinusAddition, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MinusAddition, "", new { @class = "text-danger" })
        </td>
        <td class="col-md-1">
            @Html.EditorFor(model => model.PlusAddition, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PlusAddition, "", new { @class = "text-danger" })
        </td>
        <td class="col-md-1">
            <input type="submit" value="Сохранить" class="btn btn-default" /> 
        </td>
    </tr>
}

